<div class="container">
  <h1>New Game</h1>
  <div class="letters">
    <%= @letters %>
  </div>
  <div class="form">
    <form action="/score" method="post" name="game">
      <label>What is the longest word you can find</label>
      <input type="text" name="word" id="game" class="form-control">
      <input type="submit" value="Play" class="btn btn-primary mt-2">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <input id="token" name="letters" type="hidden" value="<%=@letters%>" />
       <%# <%= hidden_field_tag :letter, @letters%> %>
      
    </form>
  </div>
</div>